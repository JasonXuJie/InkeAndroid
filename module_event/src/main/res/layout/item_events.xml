<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <ImageView
            android:id="@+id/item_img_event_icon"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/item_tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_img_event_icon"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_event_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_place"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_address"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_event_is_has_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_price"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_is_has_ticket"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_start_time"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_participated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_end_time"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_tv_event_want_participate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/item_tv_event_title"
            android:layout_below="@id/item_tv_event_participated"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>