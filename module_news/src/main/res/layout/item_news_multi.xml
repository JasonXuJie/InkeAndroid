<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_img_pic_one"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_img_pic_two"
        app:layout_constraintTop_toBottomOf="@id/item_tv_title" />


    <ImageView
        android:id="@+id/item_img_pic_two"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/item_img_pic_one"
        app:layout_constraintLeft_toRightOf="@id/item_img_pic_one"
        app:layout_constraintRight_toLeftOf="@id/item_img_pic_three" />

    <ImageView
        android:id="@+id/item_img_pic_three"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/item_img_pic_two"
        app:layout_constraintLeft_toRightOf="@id/item_img_pic_two"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/item_tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/C_C5C5C5"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/item_img_pic_one" />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_tv_from"
        android:layout_toStartOf="@id/item_img_pic"
        android:textColor="@color/C_C5C5C5"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_from"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>